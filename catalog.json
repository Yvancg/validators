{
  "version": "2025-10-20",
  "tools": [
    {
      "name": "is-card-safe",
      "description": "Credit card validator with Luhn check and basic brand patterns.",
      "input_schema": {
        "type": "object",
        "properties": { "number": { "type": "string" } },
        "required": ["number"]
      },
      "rule": { "type": "builtin", "name": "isLuhnValid", "field": "number" }
    },
    {
      "name": "is-email-safe",
      "description": "Strict ASCII email format validation.",
      "input_schema": {
        "type": "object",
        "properties": { "email": { "type": "string" } },
        "required": ["email"]
      },
      "rule": {
        "type": "regex",
        "field": "email",
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
        "flags": "i",
        "ok_reason": "valid",
        "fail_reason": "invalid_format"
      }
    },
    {
      "name": "is-iban-safe",
      "description": "Generic IBAN structure check (format-only).",
      "input_schema": {
        "type": "object",
        "properties": { "iban": { "type": "string" } },
        "required": ["iban"]
      },
      "rule": {
        "type": "regex",
        "field": "iban",
        "pattern": "^[A-Z]{2}\\d{2}[A-Z0-9]{11,30}$",
        "flags": "i",
        "ok_reason": "valid",
        "fail_reason": "invalid_iban"
      }
    },
    {
      "name": "is-ip-safe",
      "description": "IPv4 or IPv6 address validation.",
      "input_schema": {
        "type": "object",
        "properties": { "ip": { "type": "string" } },
        "required": ["ip"]
      },
      "rule": { "type": "builtin", "name": "isIP", "field": "ip" }
    },
    {
      "name": "is-json-safe",
      "description": "Valid JSON string check.",
      "input_schema": {
        "type": "object",
        "properties": { "json": { "type": "string" } },
        "required": ["json"]
      },
      "rule": { "type": "builtin", "name": "isJSON", "field": "json" }
    },
    {
      "name": "is-password-safe",
      "description": "Password strength check: length, letters, digits, symbols.",
      "input_schema": {
        "type": "object",
        "properties": { "password": { "type": "string" } },
        "required": ["password"]
      },
      "rule": {
        "type": "regex",
        "field": "password",
        "pattern": "^(?=.*[A-Za-z])(?=.*\\d)(?=.*[^A-Za-z0-9]).{8,}$",
        "ok_reason": "strong",
        "fail_reason": "weak"
      }
    },
    {
      "name": "is-phone-e164",
      "description": "E.164 international phone format (+country code, up to 15 digits).",
      "input_schema": {
        "type": "object",
        "properties": { "phone": { "type": "string" } },
        "required": ["phone"]
      },
      "rule": {
        "type": "regex",
        "field": "phone",
        "pattern": "^\\+[1-9]\\d{1,14}$",
        "ok_reason": "valid",
        "fail_reason": "invalid_e164"
      }
    },
    {
      "name": "is-url-safe",
      "description": "Conservative http(s)-only URL validation.",
      "input_schema": {
        "type": "object",
        "properties": { "url": { "type": "string" } },
        "required": ["url"]
      },
      "rule": { "type": "builtin", "name": "isURL", "field": "url" }
    },
    {
      "name": "is-us-tin-safe",
      "description": "US TIN format check (SSN or EIN).",
      "input_schema": {
        "type": "object",
        "properties": { "tin": { "type": "string" } },
        "required": ["tin"]
      },
      "rule": {
        "type": "regex",
        "field": "tin",
        "pattern": "^(\\d{3}-?\\d{2}-?\\d{4}|\\d{2}-?\\d{7})$",
        "ok_reason": "valid",
        "fail_reason": "invalid_tin"
      }
    },
    {
      "name": "is-vat-safe",
      "description": "EU VAT ID format-only check (country code + digits/letters).",
      "input_schema": {
        "type": "object",
        "properties": { "vat": { "type": "string" } },
        "required": ["vat"]
      },
      "rule": {
        "type": "regex",
        "field": "vat",
        "pattern": "^[A-Z]{2}[0-9A-Z]{8,12}$",
        "flags": "i",
        "ok_reason": "valid",
        "fail_reason": "invalid_vat"
      }
    }
  ]
}
